@model IEnumerable<IPTreatmentOfferingMicroservices.Models.SpecialistDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Specialists</h1>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpecialistId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaOfExpertise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExperienceInYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var areaOfExpertise = ((item.AreaOfExpertise == 0) ? "Orthopaedics" : "Urology");
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialistId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => areaOfExpertise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperienceInYears)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            
        </tr>
}
    </tbody>
</table>
