@model IpTreatmentManagementPortal.Models.InitiateClaim

@{
    ViewData["Title"] = "Settle Claim";
}

<h1>Settle Claim</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="settleClaim">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" class="form-control" />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Ailment" class="control-label"></label>
                <input asp-for="Ailment" class="form-control" type="number" max="1" min="0" />
                <span asp-validation-for="Ailment" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TreatmentPackageName" class="control-label"></label>
                <input asp-for="TreatmentPackageName" class="form-control" />
                <span asp-validation-for="TreatmentPackageName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="InsurerName" class="control-label"></label>
                <input asp-for="InsurerName" class="form-control" />
                <span asp-validation-for="InsurerName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
@if (TempData["Error"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["Error"]</strong>
    </div>
}
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @if (TempData["Error"] != null)
    {
        <script>
            $(document).ready(() => {
                $(".btn-close").click(() => {
                    $(".alert").hide();
                })
            });

        </script>
    }

}
